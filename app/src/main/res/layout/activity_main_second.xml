<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/field"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#97CCE4"
    android:orientation="vertical"
    tools:context=".MainActivitySecond">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/amarante"
        android:text="PersonName"
        android:textSize="20dp"
        android:textColor="#c4734a"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/gabriela"
        android:text="phone number"
        android:textSize="20dp"
        android:textColor="#c4b64a"/>

    <EditText
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:fontFamily="@font/gabriela"
        android:textSize="16dp"
        android:inputType="number"
        android:textColor="#c4b64a"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/jolly_lodger"
        android:text="textPassword"
        android:textSize="30dp"
        android:textColor="#6fc44a"/>

    <EditText
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:fontFamily="@font/jolly_lodger"
        android:inputType="textPassword"
        android:textColor="#6fc44a"
        android:textSize="16dp" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/hanalei_fill"
        android:text="textEmailAddress"
        android:textSize="20dp"
        android:inputType="textEmailAddress"
        android:textColor="#c44aa0"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/black_ops_one"
        android:text="other information"
        android:textSize="20dp"
        android:textColor="#4a5ec4"/>

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_700" />


</LinearLayout>